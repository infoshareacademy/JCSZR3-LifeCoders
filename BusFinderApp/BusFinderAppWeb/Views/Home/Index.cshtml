@using BusFinderAppCore.ViewModels;


@model SchedulesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<table border="1" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Station name", "Index", "Home", new { sortColumn = "Name", sortDirection = Model.SortDirection == "" ? "desc" : "" })
            </th>
            <th>
                @Html.ActionLink("Station address", "Index", "Home", new { sortColumn = "Address", sortDirection = Model.SortDirection == "" ? "desc" : "" })
            </th>
            <th>
                @Html.ActionLink("Message", "Index", "Home", new { sortColumn = "Message", sortDirection = Model.SortDirection == "" ? "desc" : "" })
            </th>
            <th>
                @Html.ActionLink("Time", "Index", "Home", new { sortColumn = "Time", sortDirection = Model.SortDirection == "" ? "desc" : "" })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model.Schedules )
        {
            <tr>
                <td>
                    @schedule.station.Name
                </td>
                <td>
                    @schedule.station.full_address
                <td>
                    @schedule.schedule.message
                </td>
                <td>
                    @schedule.schedule.Datetime
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
