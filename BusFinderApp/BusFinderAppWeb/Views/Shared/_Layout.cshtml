</nav>
<div class="my-background">
    <div class="my-container">
        @RenderBody()
    </div>
</div>
<footer class="my-footer">
    <div class="inline">
        <p>

        </p>
    </div>
</footer>
<script src="js/site.js"></script>
</body>
</html>