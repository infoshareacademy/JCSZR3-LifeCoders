            <li class="nav-item">
                @Html.ActionLink("Podróż", "Index", "Itinerary", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Informacje", "", "", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Aktualności", "", "", null, new { @class = "nav-link" })
            </li>
        </ul>
